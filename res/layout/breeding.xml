<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/black"
  android:id="@+id/scroller" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background ="@color/black" >

    <TextView
        android:id="@+id/egg_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize ="22sp"
        android:layout_alignBaseline="@+id/egg_group"
        android:layout_alignBottom="@+id/egg_group"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/egg_group_name" />

    <TextView
        android:id="@+id/egg_group_type"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/egg_group"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="23sp" />
    
    <TextView
        android:id="@+id/egg_group_type2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/egg_group_type"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="23sp" />
    
    
    
    <TextView
	    android:id="@+id/note1"
	    android:layout_centerHorizontal="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:textColor="@color/white"
	    android:text="text"
	    android:layout_below="@+id/breedLL"
	    android:layout_marginTop="20dp" />
    
    <ListView
        android:id="@+id/eggListView"
        android:layout_below="@+id/breedLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/black"
         >
    </ListView>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/breedLL"
        android:layout_below="@+id/egg_group_type2"
        android:layout_marginTop="20dp" >
    
	    <TextView
	        android:id="@+id/nameHeaderEgg"
	        android:layout_width="0dp"
	        android:textColor="@color/white"
	        android:layout_height="30dp"
	        android:layout_weight="10"
	        android:layout_marginTop="7dp"
	        android:layout_marginLeft="6dp"
	        android:text="@string/move" />
	
	    <TextView
	        android:id="@+id/typeEgg"
	        android:layout_weight="2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/type"
	        android:textColor="@color/white" />
	 </LinearLayout>

</RelativeLayout>
</ScrollView>

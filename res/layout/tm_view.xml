<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/tmView"  >
    
    

    <Spinner
        android:id="@+id/move_spinner_TM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:textSize="20sp"
        android:dropDownVerticalOffset="1dp"
        android:focusable="false"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/black" />
    
    <TextView
        android:id="@+id/nameTMHeader"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/move_spinner_TM"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:text="@string/name" />
    
    <TextView
        android:id="@+id/theTypeTMMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TM"
        android:layout_alignTop="@+id/nameTMHeader"
        android:layout_toLeftOf="@+id/TM"
        android:layout_marginRight = "50dp"
        android:textColor="@color/white"
        android:text="@string/type" />

    <TextView
        android:id="@+id/TM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameTMHeader"
        android:layout_alignBottom="@+id/nameTMHeader"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:textColor="@color/white"
        android:text="@string/level" />
    
    <ListView
        android:id="@+id/TMPokemonlistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
         >
    </ListView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/black">


	    <ImageView
	        android:background="#80000000"
	        android:layout_height="0dp"
	        android:layout_width="fill_parent"
	        android:scaleType="fitCenter"
			android:adjustViewBounds="true"
	        android:id="@+id/image"
	        android:layout_weight="3" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal"
		    android:background="@color/black">
		    
	        <RelativeLayout
	            android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:background="@color/black">
	            
	            <TextView
			        android:id="@+id/EG"
			        android:layout_height="wrap_content"
			        android:text="Egg Group"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp" />
	            
	            <ListView
			        android:id="@+id/EGanswer"
			        android:layout_below="@+id/EG"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:divider="@null"
					android:dividerHeight="0dp"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="3dp" />
	          
			</RelativeLayout>
	        
	    	<RelativeLayout
	            android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:background="@color/black">
	            
	            <TextView
			        android:id="@+id/HT"
			        android:layout_height="wrap_content"
			        android:text="Hatch Time"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp" />
	            
	            <TextView
			        android:id="@+id/HTanswer"
			        android:layout_below="@+id/HT"
			        android:layout_height="wrap_content"
			        android:text="5355 - 5609 steps"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="3dp" />
	          
			</RelativeLayout>
	    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal"
		    android:background="@color/black">
		    
	        <RelativeLayout
	            android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:background="@color/black">
	            
	            <TextView
			        android:id="@+id/height"
			        android:layout_height="wrap_content"
			        android:text="Height"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp" />
	            
	            <TextView
			        android:id="@+id/heightanswer"
			        android:layout_below="@+id/height"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="3dp" />
	          
			</RelativeLayout>
	        
	    	<RelativeLayout
	            android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:background="@color/black">
	            
	            <TextView
			        android:id="@+id/weight"
			        android:layout_height="wrap_content"
			        android:text="Weight"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp" />
	            
	            <TextView
			        android:id="@+id/weightanswer"
			        android:layout_below="@+id/weight"
			        android:layout_height="wrap_content"
			        android:text="30lb (14.0kg)"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="3dp" />
	          
			</RelativeLayout>
	    
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal"
		    android:background="@color/black">
		    
	        <RelativeLayout
	            android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:background="@color/black">
	            
	            <TextView
			        android:id="@+id/evyield"
			        android:layout_height="wrap_content"
			        android:text="EV Yield"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp" />
	            
	            <ListView
			        android:id="@+id/evyieldanswer"
			        android:layout_below="@+id/evyield"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:divider="@null"
					android:dividerHeight="0dp"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="3dp" />
	          
			</RelativeLayout>
	        
	    	<RelativeLayout
	            android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="horizontal"
			    android:background="@color/black">
	            
	            <TextView
			        android:id="@+id/levelingrate"
			        android:layout_height="wrap_content"
			        android:text="Leveling Rate"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp" />
	            
	            <TextView
			        android:id="@+id/levelingrateanswer"
			        android:layout_below="@+id/levelingrate"
			        android:layout_height="wrap_content"
			        android:text="Medium Slow"
			        android:layout_width="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="3dp" />
	          
			</RelativeLayout>
	    
	    </LinearLayout>
	
	</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black" >
    
    <ListView
        android:id="@+id/moveListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL"
        android:layout_marginTop="10dp"
         >
    </ListView>

    <Spinner
        android:id="@+id/pokedex_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:dropDownVerticalOffset="1dp"
        android:focusable="false"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/pokedex_pos_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokedex_type_spinner"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:dropDownVerticalOffset="1dp"
        android:focusable="false"
        android:spinnerMode="dropdown" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/LL"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/pokedex_pos_spinner"
    	android:layout_marginTop="10dp" >

	    <TextView
	        android:id="@+id/nameHeader"
	        android:layout_width="0dp"
	        android:layout_weight=".70"
	        android:textColor="@color/white"
	        android:layout_height="wrap_content"
	        android:text="@string/name" />
	    
	    <TextView
	        android:id="@+id/typeMove"
	        android:layout_width="0dp"
	        android:layout_weight = ".25"
	        android:layout_height="wrap_content"
	        android:text="@string/type"
	        android:textColor="@color/white" />
	
	    <TextView
	        android:id="@+id/Power"
	        android:layout_width="0dp"
	        android:layout_weight = ".18"
	        android:layout_height="wrap_content"
	        android:text="@string/power"
	        android:textColor="@color/white" />

	    <TextView
	        android:id="@+id/accuracy"
	        android:layout_width="0dp"
	        android:layout_weight = ".10"
	        android:layout_height="wrap_content"
	        android:text="@string/accuracy"
	        android:textColor="@color/white" />
	   </LinearLayout>

</RelativeLayout>

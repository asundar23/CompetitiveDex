<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/black" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black" >
    
    <TextView
        android:id="@+id/strengths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strengths"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    
    <ListView
        android:id="@+id/strengthsLV"
	    android:divider="@null"
		android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strengths"
        android:layout_marginTop="15dp" />
    
    <TextView
        android:id="@+id/exceptionCase"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Sets are not available for this Pokemon set. Feel free to email the developer with any sets you have in mind."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/weaknesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weaknesses"
        android:layout_below="@+id/strengthsLV"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    
    <ListView
        android:id="@+id/weaknessesLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:divider="@null"
		android:dividerHeight="0dp"
        android:layout_below="@+id/weaknesses"
        android:layout_marginTop="15dp" />
    
    <TextView
        android:id="@+id/sets_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/weaknessesLV"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    
    <ListView
        android:id="@+id/set_listView"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sets_title"
        android:layout_marginTop="20dp" />
    
    
    

</RelativeLayout>
</ScrollView>
